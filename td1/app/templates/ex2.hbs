<div class = "list-group">
  <div class="list-group-item">
    <div class="list-group-item-heading">
      {{plural model.countActive
               "aucun  service séléctionné"
               "un service séléctionné"
               "services sélectionnés"}}
    </div>
  </div>
  {{#each model.services as |service| }}
    <div class="list-group-item" {{action "toggleActive" service}}>
      {{service.name}}
      <span class="label label-default">{{service.price}} </span>
    </div>
  {{/each}}
  <div class = "list-group">
    <div class="list-group-item">
      <div class="list-group-item-info">
        {{model.sumActive}}
      </div>
    </div>
  </div>
</div>